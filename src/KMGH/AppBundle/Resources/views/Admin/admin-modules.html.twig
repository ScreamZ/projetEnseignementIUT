{% extends '::base.html.twig' %}

{% block body %}
    <div id="main">

        <h1>Gestion des diplômes</h1>

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-box {{ flashMessage.alert }} alert-dismissible" role="alert"
                 style="display: block;">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <strong>{{ flashMessage.title }}</strong> {{ flashMessage.message }}.
            </div>
        {% endfor %}

        <a id="btnOuvrePanelSuppr" href="#"><span class="glyphicon glyphicon-plus"></span> Supprimer un diplôme</a>
        {{ form_start(form, {'attr': {'id': 'panelAjout'}}) }}
        {{ form_errors(form) }}
        {{ form_row(form.diplome) }}
        {{ form_row(form.supprimer, {'label': 'Supprimer le diplôme (Les attributions liées seront également supprimées)', 'attr': {'class': 'btn btn-danger'}}) }}
        {{ form_end(form) }}


    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/kmghapp/js/admin/admin_suppr_diplome.js') }}"></script>
{% endblock %}

